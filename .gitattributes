# Auto detect text files and perform LF normalization
* text=auto

# Explicitly define text files to ensure consistent line endings
*.js text eol=lf
*.jsx text eol=lf
*.ts text eol=lf
*.tsx text eol=lf
*.json text eol=lf
*.yml text eol=lf
*.yaml text eol=lf
*.md text eol=lf
*.sql text eol=lf
*.sh text eol=lf
*.ps1 text eol=crlf
*.cmd text eol=crlf
*.bat text eol=crlf

# Denote all files that are truly binary and should not be modified
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.exe binary
*.dll binary
*.zip binary
*.7z binary
*.jar binary
*.tar binary
*.gz binary
*.rar binary
*.pdf binary

# Don't diff or merge these files
*.min.js -diff
*.min.css -diff
package-lock.json -diff
yarn.lock -diff
